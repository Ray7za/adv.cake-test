{
  "$schema": "https://getcomposer.org/schema.json",
  "license": "MIT",

  "autoload": {
    "files": [
      "functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },

  "require-dev": {
    "phpunit/phpunit": "^12.3"
  },

  "scripts": {
    "test": "vendor/bin/phpunit tests/Unit/ --colors=always"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
